@model MySpotify.Models.AdminViewModels.AdminMediaEditModel


<div class="row">
    <div>
        <form asp-action="EditMedia" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<h2>Редактировать медиа</h2>
			   <input type="hidden" asp-for="@Model.mediaDTO!.Id" />
			   <input type="hidden" asp-for="@Model.mediaDTO!.FileAdress" />
			   <input type="hidden" asp-for="@Model.mediaDTO!.Poster" />
			   <input type="hidden" asp-for="@Model.mediaDTO!.rootPath"/>
			   
			<input type="hidden" asp-for="@Model.mediaDTO!.UserId" />
				<div class="inputbox form-group">
					<ion-icon name="musical-note-outline"></ion-icon>
					<input asp-for="@Model.mediaDTO!.Name" required />
					<label asp-for="@Model.mediaDTO!.Name">Название</label>
					<span asp-validation-for="@Model.mediaDTO!.Name" class="text-danger"></span>
				</div>


				<div class="inputbox form-group">
					<ion-icon name="musical-note-outline"></ion-icon>
				<input asp-for="@Model.mediaDTO!.Artist" required />
				<label asp-for="@Model.mediaDTO!.Artist" class="control-label">Исполнитель</label>
				<span asp-validation-for="@Model.mediaDTO!.Artist" class="text-danger"></span>
				</div>

				<div class="form-group inputbox">
					Жанр
				<select asp-for="@Model.mediaDTO.Genre" name="genreId" class="form-control" asp-items="@(new SelectList(Model.Genre , "Name" ,"Name" ))"></select>
				<span asp-validation-for="@Model.mediaDTO.Genre" class="text-danger"></span>
				</div>

				

			</form>
    </div>
</div>





