@model MySpotify.Models.LoginModel
@using MySpotify.Resourses
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-danger {
        color: black;
    }
</style>

<div class="header navbar navbar-expand-lg navbar-light bg-black">
    <div class="header__section">
        <div class="header__item headerlogo">
            <a class="nav-item nav-link active" asp-action="Index" asp-controller="User">
                <img src="~/img/spotify-logo.svg" style="max-width:100px;" />
            </a>
        </div>

    </div>
   
    <div class="header__section">
        <div class="header__item headerlogo">
            <a class="nav-item nav-link disabled" asp-action="Login" asp-controller="User">@Resource.Login</a>
        </div>
        <div class="header__item headerlogo">
            <a class="nav-item nav-link active" asp-action="Registration" asp-controller="User">@Resource.Registration</a>
        </div>
    </div>
</div>


<section>
    <div class="form-box">
        <div class="form-value">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger" style="color:black"></div>
                <h2>Вход</h2>

                <div class="inputbox form-group">
                    <ion-icon name="mail-outline"></ion-icon>
                    <input type="email" autocomplete="off" asp-for="Email" required readonly onfocus="this.removeAttribute('readonly')" />
                    <label asp-for="Email">@Resource.Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="inputbox form-group">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <input autocomplete="off" asp-for="Password" required type="password" readonly onfocus="this.removeAttribute('readonly')" />
                    <label>@Resource.Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

              
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-primary" id="btn_Enter" style="color:black;" />
                </div>
                <div class="Register">
                    <p>
                        @Resource.Has_no_account_
                        <a class="nav-item nav-link active" asp-action="Registration" asp-controller="Users">@Resource.Registration</a>
                    </p>
                </div>


            </form>
        </div>
    </div>
</section>









 
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}